<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_margin="5dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/miniatura_comida"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/precio_comida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Texto Largo"
                android:paddingLeft="10dp"
                android:textAppearance="?android:textAppearanceLarge"/>

            <TextView
                android:id="@+id/nombre_comida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Texto medio"
                android:paddingLeft="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/edad2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edad:"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:paddingLeft="3dp"/>
                <TextView
                    android:id="@+id/edad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:paddingLeft="3dp"/>
                <TextView
                    android:id="@+id/peso2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peso:"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"/>
                <TextView
                    android:id="@+id/peso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:paddingLeft="5dp"/>

                <TextView
                    android:id="@+id/raza2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:text="Raza:"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/raza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:paddingLeft="5dp"/>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
        <TextView
            android:id="@+id/valoracion2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valoraci贸n:"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:textAppearance="?android:textAppearanceLarge"/>

        <TextView
            android:id="@+id/valoracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valoraci贸n:"
            android:textSize="15sp"
            android:textStyle="italic"
            android:paddingLeft="10dp"
            android:textAppearance="?android:textAppearanceLarge"/>

        <TextView
            android:id="@+id/prescripcion2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prescripci贸n:"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceLarge"/>
        <TextView
            android:id="@+id/prescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prescripci贸n:"
            android:paddingLeft="10dp"
            android:textSize="15sp"
